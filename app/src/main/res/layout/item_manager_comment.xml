<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="10dp"

       android:paddingBottom="10dp">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="3"
           android:gravity="center_vertical"
           android:layout_gravity="center_vertical"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:singleLine="true"
               android:textSize="12sp"
               android:gravity="center_vertical"
               android:layout_marginBottom="2dp"
               android:textColor="@color/textcolorBlack"
               android:id="@+id/tv_datas"/>
           <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:singleLine="true"
           android:layout_marginBottom="2dp"
           android:textColor="@color/textcolorBlack"
           android:textSize="12sp"
           android:gravity="center_vertical"
           android:id="@+id/tv_datas2"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/textColor_Bar_Title"
               android:textSize="12sp"
               android:layout_marginBottom="2dp"
               android:id="@+id/tv_comment"/>
       </LinearLayout>
       <Button
           android:layout_width="wrap_content"
           android:layout_height="20dp"
           android:id="@+id/bt_write_comment"
           android:background="@drawable/bt_gray_selector"
           android:layout_gravity="center_vertical"
           android:visibility="gone"
           android:textSize="@dimen/textSize_smallest"
           android:text="我要评价"/>

          <RatingBar
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/rbar_score"
              android:layout_gravity="center_vertical"
              android:isIndicator="true"
              style="@style/customRatingBar"
              android:numStars="5"

              android:stepSize="1.0"
              android:visibility="gone"/>

   </LinearLayout>

</LinearLayout>