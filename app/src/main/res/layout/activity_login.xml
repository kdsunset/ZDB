<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activity.RegisterActivity" >

<include layout="@layout/view_mytoolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cot_logo"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:layout_alignParentLeft="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >


            <EditText
                android:id="@+id/et_user_phone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/editview_vertical_spacing"
                android:background="@drawable/et_border_shape"
                android:ems="10"
                android:singleLine="true"
                android:hint="输入手机号码"
                android:paddingLeft="10dp"
                android:inputType="phone"
                android:gravity="fill|center_vertical"
                android:textColor="#000"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/textSize_edit" />
            <EditText
                android:id="@+id/et_user_pwd"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/editview_vertical_spacing"
                android:background="@drawable/et_border_shape"
                android:ems="10"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:textColor="#000"
                android:gravity="fill|center_vertical"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/textSize_edit" />


            <Button
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/editview_vertical_spacing"
                android:background="@drawable/bt_blue_selector"
                android:gravity="center"
                android:text="登 录"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSize_btn" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记住密码"
                    android:button="@null"
                    android:drawableLeft="@drawable/checkbox_selector"
                    android:textColor="#88000000"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/rb_save_pwd"
                    android:textSize="@dimen/textSize_edit"/>

                <TextView
                    android:id="@+id/tv_forgot_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#88000000"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="忘记密码"
                    android:textSize="@dimen/textSize_edit" />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>